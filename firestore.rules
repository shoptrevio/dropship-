rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow UI to read all public collections
    match /{collection}/{document} {
      allow read: if collection in ['products', 'ui_settings'];
    }

    // Protect UX metrics writes
    match /ux_metrics/{userId} {
      allow write: if request.auth.uid == userId;
    }
  }
}