
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- UX Configuration Rules ---
    // ux_config: Global UI settings, public read, admin write.
    // ui_components: Defines component styles, public read, admin write.
    match /ux_config/{docId} {
      allow read: if true;
      allow write: if request.auth.token.admin == true;
    }
    
    match /ui_components/{componentId} {
      allow read: if true;
      allow write: if request.auth.token.admin == true;
    }
    
    // --- User-Specific Rules ---
    // user_preferences: Per-user settings, only the user can read/write.
    match /user_preferences/{userId} {
      allow read, update: if request.auth.uid == userId;
      allow create: if request.auth.uid == userId;
    }

    // --- Core E-Commerce Rules ---
    // products: Publicly readable. Only admins/staff can write.
    match /products/{productId} {
      allow read: if true;
      allow write: if request.auth.token.admin == true || request.auth.token.staff == true;
    }

    // orders: Users can create and read their own orders. Staff/Admins can read all.
    match /orders/{orderId} {
      allow create: if request.auth.uid == request.resource.data.userId;
      allow read: if request.auth.uid == resource.data.userId || request.auth.token.admin == true || request.auth.token.staff == true;
      allow update: if request.auth.token.admin == true || request.auth.token.staff == true;
    }

    // users: Users can read/update their own profile. Admins can read all.
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;
      allow create: if request.auth.uid == userId;
      allow list: if request.auth.token.admin == true;
    }

    // --- AI and Admin Rules ---
    // ai_models: Read-only for the client.
    match /ai_models/{modelId} {
      allow read: if true;
      allow write: if request.auth.token.admin == true;
    }

    // ai_training_feedback: Authenticated users can create feedback.
    match /ai_training_feedback/{feedbackId} {
      allow create: if request.auth != null;
    }

    // admin_ux_controls: Only admins can read/write.
    match /admin_ux_controls/{controlId} {
      allow read, write: if request.auth.token.admin == true;
    }

    // ux_metrics: Clients can write their own metrics, admins can read all.
    match /ux_metrics/{metricId} {
      allow create: if request.auth.uid == metricId;
      allow read: if request.auth.token.admin == true;
    }
  }
}
