
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is authenticated.
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to get the user's role from the 'users' collection.
    function getUserRole(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role;
    }

    // Helper function to check if the user is an Admin.
    function isAdmin() {
      return isSignedIn() && getUserRole(request.auth.uid) == 'admin';
    }

    // Helper function to check if the user is Staff.
    function isStaff() {
      return isSignedIn() && (getUserRole(request.auth.uid) == 'staff' || isAdmin());
    }

    // Products:
    // Customers can read all products.
    // Staff can create and update products.
    // Admins have full access.
    match /products/{productId} {
      allow read: if true;
      allow create, update: if isStaff();
      allow delete: if isAdmin();
    }

    // Suppliers:
    // Only accessible by Admins for security.
    // Supplier data is sensitive.
    match /suppliers/{supplierId} {
      allow read, write: if isAdmin();
    }
    
    // Users:
    // Users can read and update their own user document.
    // Admins can read and write any user document (for role management).
    match /users/{userId} {
      allow read, update: if isSignedIn() && request.auth.uid == userId;
      allow write: if isAdmin();
    }

    // Orders:
    // Users can create, read, and update their own orders.
    // Staff can read and update any order (for fulfillment).
    // Admins have full access.
    match /orders/{orderId} {
      allow create: if isSignedIn();
      allow read, update: if (isSignedIn() && resource.data.userId == request.auth.uid) || isStaff();
      allow delete: if isAdmin();
    }

    // AI_models:
    // This collection should be read-only for most of the app.
    // Only Admins should be able to update model versions or endpoints.
    match /ai_models/{modelId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
  }
}
