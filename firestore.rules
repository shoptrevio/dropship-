
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to get user data
    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }

    // Helper function to check for a specific role
    function hasRole(role) {
      return isAuthenticated() && getUserData(request.auth.uid).role == role;
    }

    // Admins have full access to everything
    match /{path=**}/documents/ {
      allow read, write: if hasRole('admin');
    }

    // Products:
    // - Customers can read all products
    // - Staff can create and update products
    // - Suppliers can only update inventory of their own products
    match /products/{productId} {
      allow read: if isAuthenticated();
      allow create: if hasRole('staff');
      allow update: if hasRole('staff') || 
                     (get(/databases/$(database)/documents/suppliers/$(request.auth.uid)).data.productId == productId);
    }
    
    // Users:
    // - Users can read and write their own data
    // - Staff can view user data for support purposes
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
      allow get: if hasRole('staff');
    }

    // Orders:
    // - Users can create and read their own orders
    // - Staff can update order status
    match /orders/{orderId} {
      allow create: if isAuthenticated();
      allow read: if isAuthenticated() && getUserData(request.auth.uid).id == resource.data.userId;
      allow update: if hasRole('staff');
    }
    
    // Suppliers:
    // - Only admins can manage supplier documents
    match /suppliers/{supplierId} {
      allow read, write: if hasRole('admin');
    }

    // AI Models & Training Data:
    // - Read/write access restricted to admins for managing models and training data
    match /ai_models/{modelId} {
      allow read, write: if hasRole('admin');
    }

    match /ai_training_feedback/{feedbackId} {
      allow read, write: if hasRole('admin');
      allow create: if isAuthenticated();
    }
    
    match /ai_decision_logs/{logId} {
       allow read, write: if hasRole('admin');
    }
  }
}
