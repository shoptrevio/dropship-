
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // PUBLIC ACCESS RULES
    // Public collections readable by anyone, but writable only by admins.
    match /products/{productId} {
      allow read: if true;
      allow write: if request.auth.token.admin == true;
    }
    match /ux_config/{docId} {
      allow read: if true;
      allow write: if request.auth.token.admin == true;
    }
     match /ui_components/{docId} {
      allow read: if true;
      allow write: if request.auth.token.admin == true;
    }
    match /ui_settings/{docId} {
      allow read: if true;
      allow write: if request.auth.token.admin == true;
    }
    match /geo_targeted_ux/{docId} {
        allow read: if true;
        allow write: if request.auth.token.admin == true;
    }

    // USER-SPECIFIC RULES
    // Users can read/write their own data, but not others'.
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }
    match /user_preferences/{userId} {
        allow read, update: if request.auth.uid == userId;
        allow create: if request.auth != null;
    }
    match /orders/{orderId} {
      allow read, write: if request.auth.uid == resource.data.userId;
    }
    
    // UX METRICS
    // Allow clients to write their own metrics. Admins can read all metrics.
    match /ux_metrics/{metricId} {
        allow write: if request.auth.uid == metricId;
        allow read: if request.auth.token.admin == true;
    }

    // ADMIN-ONLY RULES
    // Collections that are only readable/writable by admins.
    match /suppliers/{supplierId} {
      allow read, write: if request.auth.token.admin == true;
    }
    match /ai_models/{modelId} {
      allow read, write: if request.auth.token.admin == true;
    }
    match /ai_training_feedback/{feedbackId} {
      allow read, write: if request.auth.token.admin == true;
    }
    match /ai_decision_logs/{logId} {
      allow read, write: if request.auth.token.admin == true;
    }
    match /admin_ux_controls/{controlId} {
        allow read, write: if request.auth.token.admin == true;
    }
  }
}
