
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }

    // Products: Customers can read, admins/staff can write
    match /products/{productId} {
      allow read: if true;
      allow write: if request.auth.token.role in ['admin', 'staff'];
    }

    // Suppliers: Admins can manage
    match /suppliers/{supplierId} {
      allow read, write: if request.auth.token.role == 'admin';
    }
    
    // Orders: Users can create their own, admins/staff can read/update
    match /orders/{orderId} {
      allow create: if request.auth.uid == request.resource.data.userId;
      allow read, update: if request.auth.token.role in ['admin', 'staff'] || request.auth.uid == resource.data.userId;
    }

    // Users: Can read/update their own profile, admins can manage all
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;
      allow write: if request.auth.token.role == 'admin';
    }

    // AI Models: Read-only for authenticated users
    match /ai_models/{modelId} {
      allow read: if request.auth != null;
      allow write: if request.auth.token.role == 'admin';
    }
  }
}
